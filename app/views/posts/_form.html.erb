<body>
  <div class="mx-auto">
    <%= form_with model: @post, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <form>
      <div class="form-group">
        <h2><%= f.label :訪れた場所, class:"fas fa-clipboard-list"%></h2>
        <%= f.text_field :place_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <h2><%= f.label :タイトル, class:"fas fa-clipboard-list" %></h2>
        <%= f.text_area :title, class: 'form-control'%>
      </div>
      <div class="form-group">
        <h2><%= f.label :本文, class:"fas fa-clipboard-list" %></h2>
        <%= f.text_area :content, class: 'form-control'%>
      </div>
      <div class="form-group">
        <h2><%= f.label :画像, class:"fas fa-images" %></h2>
        <%= f.attachment_field :post_images_images, multiple: true, class:"form-control-file" %>
        <small class="text-danger">画像は5枚まで投稿できます</small>
      </div>
      <%= f.submit "投稿する", class:'btn btn-primary btn-lg'%>
    </form>
    <% end %>
  </div>
</body>
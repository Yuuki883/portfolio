<h1><%= @topic.title %></h1>
<% @topic_comments.each do |f| %>
<p>
    <%= f.name %> : <%= f.body %>
</p>
<% end %>

<h3>新規書き込み</h3>
<%= form_with model:@topic_comment, url: topic_topic_comments_path(@topic) do |f| %>
<p>ユーザー名</p>
<%= f.text_field :name %>
<p>コメント</p>
<p><%= f.text_area :body %></p>
<%= f.hidden_field :topic_id %>
<%= f.submit 'コメントする'%>
<% end %>
<% if isRoom == true %>
    <%= link_to "チャットへ", room_path(roomId), class:"btn btn-info rounded-pill  btn-sm fas fa-comments" %>
<% else %>
    <%= form_for room do |f| %>
    <%= fields_for entry do |e| %>
    <%= e.hidden_field :user_id, :value=> user.id %>
    <% end %>
    <%= button_tag(type: "submit", class: "btn btn-light rounded-pill btn-sm fas fa-comments") do %>
    チャットする
    <% end %>
    <% end %>
<% end %>